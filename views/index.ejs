<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <div class="container">
    <h1>URL Shortener</h1>
    <form action="shortUrl" method="POST" class="my-4 form-inline">
        <label for="input-url"></label>
        <input required type="url" name="fullUrl" id="input-url" placeholder="URL" class="form-control mr-2 col">
        <button type="submit"class="btn btn-primary">shorten</button>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Full Url</th>
                <th>Short Url</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% shortUrl.forEach(shortUrl => { %>

                <tr>
                    <td>
                    <a href="<%= shortUrl.fullUrl%>"><%= shortUrl.fullUrl%></a>
                    </td>
    
                    <td>
                        <a href="<%= shortUrl.shortUrl%>"><%= shortUrl.shortUrl%></a>
                    </td>
    
                    <td>
                        <%= shortUrl.clicks%>
                    </td>
                </tr>

            <% }) %>
            
        </tbody>
    </table>
</div>
</body>
</html>